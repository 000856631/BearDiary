<!--mark.wxml-->

<view wx:for="{{diaries}}" wx:for-index="idx">
  <navigator url="../item/item?id={{idx}}" class="inner">
    <image class="cover" mode="aspectFit" src="{{item.image}}"></image>
    <view class="title">{{item.title}}</view>
    <view class="meta">
      {{item.meta}}
    </view>
    <image class="avatar" mode="aspectFit" src="{{item.avatar}}">
    </image>
  </navigator>
</view>
